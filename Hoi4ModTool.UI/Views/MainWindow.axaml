<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Hoi4ModTool.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:colorpicker="clr-namespace:AvaloniaColorPicker;assembly=AvaloniaColorPicker"
        xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
        
        MinWidth="875"
        MaxWidth="875"
        
        Height="712"
        
        x:Class="Hoi4ModTool.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Hearts of Iron IV Mod Tool"
        
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        >

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="None"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.75" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        
        <ScrollViewer>
        
        <StackPanel Margin="10 10" VerticalAlignment="Top" HorizontalAlignment="Center" Name="Inputs">
            
            <StackPanel Name="CountryOptions">
                <Label Margin="10 10" 
                       FontSize="16" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center" 
                       FontWeight="ExtraBold" 
                       Content="Country Options"/>
                
                <TextBox Margin="10, 5" Width="512">Country Name</TextBox>
                <TextBox Margin="10, 5" Width="512">Country Tag</TextBox>
                
                <Label Margin="0 10 0 0" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Bottom" 
                       FontWeight="ExtraBold" 
                       Content="Country Colour"/>
                
                <colorpicker:ColorPicker Name="CountryColour"/>
            </StackPanel>
            
            <StackPanel Name="LeaderOptions">
                <Label Margin="10 10" 
                       FontSize="16" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center" 
                       FontWeight="ExtraBold" 
                       Content="Leader Options"/>
                
                <TextBox Margin="10, 5" Width="512">Leader Name</TextBox>
                
                <ComboBox Name="LeaderIdeology" Width="512" VerticalAlignment="Top" HorizontalAlignment="Center"/>

                
            </StackPanel>
            
            <StackPanel Name="PartyPopularities">
                <Label Margin="10 10" 
                       FontSize="16" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center" 
                       FontWeight="ExtraBold" 
                       Content="Party Options"/>
                
                <Label HorizontalAlignment="Center">Fascism Popularity</Label>
                <NumericUpDown Name="FascismPopularity" Width="512" Minimum="0" Maximum="100"/>
                
                <Label Margin="10 10 10 0" HorizontalAlignment="Center">Communism Popularity</Label>
                <NumericUpDown Name="CommunismPopularity" Width="512" Minimum="0" Maximum="100"/>
                
                <Label Margin="10 10 10 0" HorizontalAlignment="Center">Democracy Popularity</Label>
                <NumericUpDown Name="DemocracyPopularity" Width="512" Minimum="0" Maximum="100"/>
                
                <Label Margin="10 10 10 0" HorizontalAlignment="Center">Non-Aligned Popularity</Label>
                <NumericUpDown Name="NonAlignedPopularity" Width="512" Minimum="0" Maximum="100"/>
                
                <Label Margin="10 10 10 0" HorizontalAlignment="Center">Ruling Party</Label>
                <ComboBox Name="RulingParty" Width="512" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Name="CountryStats">
                <Label Margin="10 10" 
                       FontSize="16" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center" 
                       FontWeight="ExtraBold" 
                       Content="Country Statistics"/>
                
                <Label HorizontalAlignment="Center">Research Slots</Label>
                <NumericUpDown Name="ResearchSlots" Width="512" Minimum="0"/>
                
                <Label Margin="10 10 10 0" HorizontalAlignment="Center">War Support</Label>
                <NumericUpDown Name="WarSupport" Width="512" Minimum="0" Maximum="100"/>
                
                <Label Margin="10 10 10 0" HorizontalAlignment="Center">Stability</Label>
                <NumericUpDown Name="Stability" Width="512" Minimum="0" Maximum="100"/>
            </StackPanel>
            
        </StackPanel>
            
        </ScrollViewer>
    </Panel>

</Window>
