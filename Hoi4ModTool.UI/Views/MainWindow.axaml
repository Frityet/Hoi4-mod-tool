<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Hoi4ModTool.UI.ViewModels"
        
        xmlns:controls="clr-namespace:Hoi4ModTool.UI.Controls"

        Width="886"
        Height="768"
        
        MinWidth="885"
        MaxWidth="885"
        
        MinHeight="768"
        
        x:Class="Hoi4ModTool.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Hearts of Iron IV Mod Tool"
        
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        >

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Panel Margin="10">
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="None"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.75" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        
        <TabControl>
            <TabItem Header="Country Editor">
                <controls:CountryEditor Margin="10"/>
            </TabItem>
            
            <TabItem Header="State Editor"></TabItem>
            <TabItem Header="Ideology Editor"></TabItem>
        </TabControl>
    </Panel>

</Window>
